version: '3.4'

services:
  redis-kv:
    image: redis:latest
  database:
    image: postgres:latest
    environment:
      POSTGRES_USER: sourcehut
      POSTGRES_DB: sourcehut
      POSTGRES_PASSWORD: sourcehut
    volumes:
      - db-data:/var/lib/postgresql/data
  srhts:
    build: ./
    ports:
      - {{PORTS}}
    volumes:
      - git-data:/var/lib/git
      - ./config.ini:/etc/sr.ht/config.ini
    links:
      - database
      - redis-kv

volumes:
  db-data:
  git-data:
